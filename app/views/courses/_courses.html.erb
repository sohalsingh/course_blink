<!-- List of Courses -->
<% courses.each do |course| %>
  <div
    class="
      overflow-hidden relative flex flex-col rounded-lg bg-white border shadow-sm
      dark:bg-slate-900 dark:border-gray-700 dark:shadow-slate-700/[.7]
    "
  >
    <% if course.completed_by? current_user %>
      <div class="absolute right-0 top-0 h-16 w-16">
        <div
          class="
            absolute transform rotate-45 bg-green-600 text-center text-white font-semibold
            py-1 right-[-45px] top-[22px] w-[170px]
          "
        >
          Completed
        </div>
      </div>
    <% end %>
    <img
      class="w-full h-32 object-cover rounded-t-xl"
      src="<%= course.photo_url %>"
      alt="Course Image"
    >
    <div class="p-4 md:p-5">
      <h3 class="text-lg font-bold text-gray-800 dark:text-white">
        <%= course.title %>
      </h3>
      <p class="mt-1 text-gray-500 dark:text-gray-400">
        <%= if course.description.nil?
          "..."
        else
          course.description.truncate(100, omission: ".....")
        end %>
      </p>
      <%= link_to course_path(course) , class:"mt-2 p-2 inline-flex justify-center items-center gap-x-1 text-sm font-semibold rounded-lg border border-transparent bg-blue-600 text-white hover:bg-blue-700 disabled:opacity-50 disabled:pointer-events-none dark:focus:outline-none dark:focus:ring-1 dark:focus:ring-gray-600" do %>
        View Course
      <% end %>
    </div>
  </div>
<% end %>
<!-- End Courses -->
