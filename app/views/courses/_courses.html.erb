<!-- Grid -->
<div class="grid grid-cols-4 gap-4">
  <% @courses.each do |course| %>
    <div class="flex flex-col rounded-lg m-4 bg-white border shadow-sm dark:bg-slate-900 dark:border-gray-700 dark:shadow-slate-700/[.7]">
      <img class="w-full h-auto rounded-t-xl" src="<%= course.photo_url %>" alt="Image Description">
      <div class="p-4 md:p-5">
        <h3 class="text-lg font-bold text-gray-800 dark:text-white">
          <%= course.title %>
        </h3>
        <p class="mt-1 text-gray-500 dark:text-gray-400">
          <%= course.description.nil? ? "..." : course.description.truncate(100, omission: '.....') %>
        </p>
        <a class="mt-2 py-2 px-3 inline-flex justify-center items-center gap-x-2 text-sm font-semibold rounded-lg border border-transparent bg-blue-600 text-white hover:bg-blue-700 disabled:opacity-50 disabled:pointer-events-none dark:focus:outline-none dark:focus:ring-1 dark:focus:ring-gray-600" href="#">
          Go somewhere
        </a>
      </div>
    </div>
  <% end %>
</div>
<!-- End Grid -->
